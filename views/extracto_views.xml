<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_extracto_tree" model="ir.ui.view">
            <field name="name">extractos.extracto.tree</field>
            <field name="model">extractos.extracto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="fecha"/>
                    <field name="cartera_id"/>
                    <field name="prestamista_id"/>
                    <field name="lineas_pendientes"/>
                    <field name="lineas_descartadas"/>
                    <field name="lineas_procesadas"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_extracto_form" model="ir.ui.view">
            <field name="name">extractos.extracto.form</field>
            <field name="model">extractos.extracto</field>
            <field name="arch" type="xml">
                <form string="Extracto">
                    <header>
                        <button name="action_importar" string="Importar Archivo" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_usar_inteligencia_artificial" string="Usar Inteligencia Artificial" type="object" class="btn-primary" invisible="state != 'imported' or not tiene_lineas_pendientes_sin_prestamo"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="fecha"/>
                                <field name="cartera_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="prestamista_id" readonly="1"/>
                                <field name="tipo_extracto_id" readonly="1"/>
                                <field name="file" filename="file_name" invisible="state != 'draft'"/>
                                <field name="file_name" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Líneas Pendientes" name="pending">
                                <field name="linea_ids" domain="[('state', '=', 'pending')]" context="{'default_state': 'pending'}">
                                    <tree decoration-info="auto_asignado == True" decoration-muted="state == 'discarded'">
                                        <field name="fecha"/>
                                        <field name="importe" widget="monetary"/>
                                        <field name="concepto"/>
                                        <field name="observaciones"/>
                                        <field name="prestamo_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="auto_asignado"/>
                                        <field name="revisado" widget="boolean_toggle"/>
                                        <field name="state"/>
                                        <button name="open_action_distribucion" string="Distribuir" type="object" icon="fa-list" invisible="state != 'pending' or not prestamo_id"/>
                                        <button name="action_descartar" string="Descartar" type="object" icon="fa-trash" invisible="state != 'pending'"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Líneas Descartadas" name="discarded">
                                <field name="linea_ids" domain="[('state', '=', 'discarded')]">
                                    <tree decoration-muted="True">
                                        <field name="fecha"/>
                                        <field name="importe" widget="monetary"/>
                                        <field name="concepto"/>
                                        <field name="observaciones"/>
                                        <button name="action_restaurar" string="Restaurar" type="object" icon="fa-undo"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Líneas Procesadas" name="processed">
                                <field name="linea_ids" domain="[('state', '=', 'processed')]" readonly="1">
                                    <tree>
                                        <field name="fecha"/>
                                        <field name="importe" widget="monetary"/>
                                        <field name="concepto"/>
                                        <field name="prestamo_id"/>
                                        <field name="pago_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_extracto" model="ir.actions.act_window">
            <field name="name">Extractos</field>
            <field name="res_model">extractos.extracto</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tipo_extracto_tree" model="ir.ui.view">
            <field name="name">extractos.tipo_extracto.tree</field>
            <field name="model">extractos.tipo_extracto</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="formato"/>
                    <field name="skiprows"/>
                    <field name="first_row_headers"/>
                    <field name="usecols"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="view_tipo_extracto_form" model="ir.ui.view">
            <field name="name">extractos.tipo_extracto.form</field>
            <field name="model">extractos.tipo_extracto</field>
            <field name="arch" type="xml">
                <form string="Tipo de Extracto">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="formato"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="skiprows"/>
                                <field name="first_row_headers"/>
                                <field name="usecols" placeholder="Ej: C:M"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_tipo_extracto" model="ir.actions.act_window">
            <field name="name">Tipos de Extracto</field>
            <field name="res_model">extractos.tipo_extracto</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

